<div class="container job-search">
  <div class="row">
    <div class="col s12">
      <span class="search_header">Search Job Postings </span><span class="search_sub">Find the right job for you!</span>

      <%= form_tag all_path, method: :get do %>
      <div class='form-group'>
        <%= text_field_tag :query, params[:query], class: 'form-control typeahead' %>
        <%= submit_tag 'search', class: 'material-icons search_button' %>
      <% end %>
    </div>
  </div>
</div>
