<div class="container job-search center-align">
  <div class="row">
    <div style="margin: 0 auto; width: 50%;">
      <span class="search_header">Search Job Postings</span>

      <%= form_tag all_path, method: :get do %>
      <div class='form-group'>
        <%= text_field_tag :query, params[:query], class: 'form-control typeahead', placeholder: "Find the right job for you!" %>
        <%= submit_tag 'search', class: 'material-icons search_button' %>
      <% end %>
    </div>
  </div>
</div>
