<% if @job.status == 'Open' %>
  <%= f.select :status, options_for_select(["Open", "In progress", "Closed"]) %>
<% elsif @job.status == 'In progress' %>
  <%= f.select :status, options_for_select(["In progress", "Open", "Closed"]) %>
<% else %>
  <%= f.select :status, options_for_select(["Closed", "Open", "In progress"]) %>
<% end %>
