<div class="container">
  <div class="row">
    <div class="col s12">
        <h1> <%= @job.title %> </h1>
        <hr>
        <p><strong>ID: </strong> <%= @job.id %> </p>
        <hr>
        <p><strong>Description: </strong> <%= @job.description %> </p>
        <hr>
        <p><strong>Address: </strong> <%= @job.address %> </p>
        <hr>
        <p><strong>City: </strong> <%= @job.city %> </p>
        <hr>
        <p><strong>State: </strong> <%= @job.state %> </p>
        <hr>
        <p><strong>Zip: </strong> <%= @job.zip %> </p>
        <p><strong>Begin Date: </strong>  <%= @job.begin_date.strftime("%B").to_s + " " + @job.begin_date.day.to_s + "," + @job.begin_date.year.to_s %></p>
        <p><strong>End Date: </strong> <%= @job.end_date.strftime("%B").to_s + " " + @job.end_date.day.to_s + "," + @job.end_date.year.to_s %></p>
        <p><strong>Begin Date: </strong>  <%= @job.begin_date.strftime("%B").to_s + " " + @job.begin_date.day.to_s + "," + @job.begin_date.year.to_s %></p>
        <p><strong>Job Posted Date: </strong> <%= @job.created_at.strftime("%B").to_s + " " + @job.created_at.day.to_s + "," + @job.created_at.year.to_s %></p>
        <p><strong>Dollar Value: </strong> <%= @job.dollar_value %> </p>
        <hr>
        <p><strong>Type of Job: </strong> <%= @job.type_of_job %> </p>
        <hr>
        <p><strong>Status: </strong> <%= @job.status %> </p>
        <hr>
        <p><strong>Recurring: </strong> <%= @job.recurring %> </p>
        <hr>
        <p><strong>Pet Location: </strong> <%= @job.pet_location %> </p>
        <hr>
        <p><strong>Expiration Date: </strong> <%= @job.expiration_date %> </p>
        <hr>
        <p><strong>Job Owner: </strong> <%= @job.owner.first_name %> <%= @job.owner.last_name %> </p>
        <hr>
        <p><strong>Name of pet: </strong> <%= @job.pet.name %>
        <p><strong>Pet Image: </strong> <%= image_tag(@job.pet.image) %>

        <% if check_if_job_is_saved_to_db_by_freelancer == true %>
          <p><strong>Freelancer Info: </strong> <%= @job.freelancer.first_name %> <%= @job.freelancer.last_name %> </p>
        <% end %>

        <% if check_if_job_is_owners == true %>
          <%= link_to "Update Job", edit_job_path(@job.id), class:"btn"%>
          <%= button_to 'Delete', {:controller => "jobs", :action => 'destroy', :id => @job.id}, data: {:confirm => "Are you sure you want to delete the #{@job.title} job?"}, :method => :delete, class: 'btn' %>
        <% end %>
    </div>
  </div>
</div>
