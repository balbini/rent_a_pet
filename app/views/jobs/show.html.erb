<div class="container">
  <div class="row">
    <div class="col s12" style="border: red solid 2px">
      <h1>Show one single job</h1>
        <p><strong>Title: </strong> <%= @job.title %> </p>
        <p><strong>ID: </strong> <%= @job.id %> </p>
        <p><strong>Description: </strong> <%= @job.description %> </p>
        <p><strong>Address: </strong> <%= @job.address %> </p>
        <p><strong>City: </strong> <%= @job.city %> </p>
        <p><strong>State: </strong> <%= @job.state %> </p>
        <p><strong>Zip: </strong> <%= @job.zip %> </p>
        <p><strong>Begin Date: </strong> <%= @job.begin_date %> </p>
        <p><strong>End Date: </strong> <%= @job.end_date %> </p>
        <p><strong>Dollar Value: </strong> <%= @job.dollar_value %> </p>
        <p><strong>Type of Job: </strong> <%= @job.type_of_job %> </p>
        <p><strong>Status: </strong> <%= @job.status %> </p>
        <p><strong>Recurring: </strong> <%= @job.recurring %> </p>
        <p><strong>Pet Location: </strong> <%= @job.pet_location %> </p>
        <p><strong>Expiration Date: </strong> <%= @job.expiration_date %> </p>
        <p><strong>Job Owner: </strong> <%= @job.owner.first_name %> <%= @job.owner.last_name %> </p>
        <p><strong>Name of pet: </strong> <%= @job.pet.name %>

    </div>
  </div>
</div>
