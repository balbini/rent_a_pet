<div>
  <!-- @other_user.email this is the person that is NOT the current user -->
  <h5>Chat with <%= @other_user.email %></h5>
  <% if @chatroom.messages.any? %>
    <div id="messages">
      <%= render partial: 'messages/message', collection: @chatroom.messages.order(id: :asc)%>
    </div>
  <%else%>
    <div id="messages">
    </div>
  <%end%>
</div>
<%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom}%>
</div>
<script>
  createMessageChannel();
  // app/assets/javascripts/channels/messages.js
  messageForm();
  // app/assets/javascripts/messages_form.js
  $(".scroll").scrollTop($(".scroll")[0].scrollHeight);
</script>
