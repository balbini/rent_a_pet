<div class="field">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true %>
</div>

<div class="field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email%>
</div>

<div class="field">
  <%= f.label :about_me %><br />
  <%= f.text_area :about_me, placeholder: "Tell everyone about yourself! How many pets do you have?" %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :city %><br />
  <%= f.text_field :city %>
</div>

<div class="field">
  <%= f.label :state %><br />
  <%= f.text_field :state %>
</div>

<div class="field">
  <%= f.label :zip %><br />
  <%= f.text_field :zip %>
</div>

<div class="image">
  <%= f.label :image %><br />
  <%= f.file_field :image %>
</div>
